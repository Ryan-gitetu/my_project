<div class="ui text container">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Log-in to your account
        </div>
      </h2>
      <form {{action "login" email password on="submit"}} class="ui large form">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <Input @value={{email}} type="text" name="email" placeholder="E-mail address"/>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <Input @value={{password}} type="password" name="password" placeholder="Password"/>
            </div>
          </div>
          <button type="submit" class="ui button">  Se connecter </button>
        </div>

        <div class="ui error message"></div>

      </form>
    </div>
  </div>
</div>
{{outlet}}
