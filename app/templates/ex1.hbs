{{page-title "Ex1"}}
<div class="card">
  <div class="_card-hader bg-primary text-light">
    Ex1 : Note application
  </div>
  <div class="card-body">
    <Textarea class="form-control mb-3" rows="4" @value={{this.content}} @input={{this.update}}/>
    <button class="btn btn-primary" type="button" {{on "click" this.save}}> Enregistrer </button>
    <button class="btn btn-primary" type="button" {{on "click" this.clear}}> Effacer </button>
    <div class="alert alert-info"> Il vous reste {{this.size}} caractères à saisir.</div>
    <div class={{this.styles}}> note modifiée.</div>
  </div>
</div>
{{outlet}}
