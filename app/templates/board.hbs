{{page-title "Board"}}
<!-- MENU BAR -->
  <div class="ui inverted large menu" style="margin: 0%; border-radius: 0px; padding: 0px;">
    <a class="active teal item" style="height: 101%; font-size: 113.333%;font-weight: 600; border-radius: 0px;" {{action "board"}}>
      <i class="icon home"></i>
      Accueil
    </a>

    <a class="item" style="height: 100%; font-size: 113.333%;font-weight: 600;">
      <i class="icon shopping basket"></i>
      Mes commandes
    </a>

    <a class="item" style="height: 100%; font-size: 113.333%;font-weight: 600;" {{action "section" @model.section}}>
      <img style="height: 60%; width: 20px;opacity: 0.9; margin: 0.0em 0.35em 0em 0em;" src="https://img.icons8.com/pastel-glyph/64/ffffff/shop--v1.png/">
        Magasin
    </a>

    <a class="active olive right item" style=" padding: 0%;height: 96%; font-size: 113.333%;font-weight: 600; width: 10%;">
      <div class="ui simple dropdown item" style="height: 100%; width: 100%;font-size: 113.333%;font-weight: 600;">
        <i class="icon user outline"></i>
        {{model.employee.name}}
        <i class="dropdown icon" style="margin-left: auto;margin-right: 0;"></i>
        <div class="compact menu" style="margin: 0%; border-radius: 0px; padding: 0px;">
          <div class="header" style="font-weight: 600;">Profile</div>
          <a class="item" {{action "logout"}}>
            <i class="icon sign-out"></i>
            Deconnexion
          </a>
        </div>
      </div>
    </a>
  </div>

<div class="test ui sizer vertical segment" style="margin-top: 70px; margin-left: 2%; margin-bottom: 2%;">
  <div class="ui huge header"> Commandes </div>
</div>

<div class="ui grid">
  <div class="commande-div">
      {{#each @model.orders as |order|}}
            <div class="carte-div ui card">
              <div class="content">
                <div class="header">Commande {{order.id}}</div>
              </div>
              <div class="content">

                <h4 class="ui sub header">Date</h4>
                <div class="ui small feed">
                  <div class="event">
                    <div class="content">
                      <div class="summary">
                        {{order.dateCreation}}
                      </div>
                    </div>
                  </div>
                </div>

                <h4 class="ui sub header">Nombre de produit</h4>
                <div class="ui small feed">
                  <div class="event">
                    <div class="content">
                      <div class="summary">
                        {{order.itemsNumber}}
                      </div>
                    </div>
                  </div>
                </div>

              </div>
              <LinkTo @route="order" @model={{order.id}}>
                <div class="ui bottom attached  blue button">
                  Voir la commande
                </div>
              </LinkTo>
            </div>
      {{/each}}
  </div>
</div>

{{outlet}}
